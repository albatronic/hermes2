{% extends 'Articulos/index.html.twig' %}

{% block navegador %}{% endblock %}

{% block mantenimiento %}
<div class="FormManto">
    <form name="manto_{{values.controller}}" id="manto_{{values.controller}}" action="" method="POST" enctype="multipart/form-data">
        <input name="controller" value="Articulos" type="hidden" />
        <input name="action" id="action_{{values.controller}}" value="new" type="hidden" />
        {% include '_global/comandosCreate.html.twig' %}

        <div class="Cuerpo">
        {% include "_global/alertas.html.twig" with {'alertas': values.alertas,'errores': values.errores} %}
        <input name="Articulos[IDArticulo]" id="Articulos_IDArticulo" value="{{values.datos.IDArticulo}}" type="hidden" />
        {% include "Articulos/form.html.twig" with {'datos': values.datos} %}
        </div>
    </form>
</div>
{% endblock %}