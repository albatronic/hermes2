{# Clientes/rutasVentas.html.twig #}

<div class="modal fade" id="dialogRutasVentaReparto" tabindex="-1" role="dialogRutasVentaReparto" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Rutas de venta y reparto para {{cliente.RazonSocial}}</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <p style="text-align: center; padding: 5px; font-weight: bold;">Visitas Comerciales</p>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Día</th>
                                    <th>Comercial</th>
                                </tr>
                            </thead>

                            <tbody>
                                {% for ruta in cliente.getRutasVentas %}
                                    <tr>
                                        <td>{{ruta.Dia}}</td>
                                        <td>{{ruta.IDComercial}}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>

                        </table>
                    </div>

                    <div class="col-md-6">
                        <p style="text-align: center; padding: 5px; font-weight: bold;">Repartos</p>
                        <table class="table table-striped">
                            <thead>
                                <tr class="Titulos">
                                    <th>Día</th>
                                    <th>Ruta</th>
                                    <th>Dirección</th>
                                    <th>Repartidor</th>            
                                </tr>
                            </thead>

                            <tbody>
                                {% for ruta in cliente.getRutasReparto %}
                                    <tr>
                                        <td style="text-align: left;">{{ruta.Dia}}</td>
                                        <td style="text-align: left;">{{ruta.IDRuta.Descripcion}}</td>
                                        <td style="text-align: left;">{{ruta.IDDirec}}</td>
                                        <td style="text-align: left;">{{ruta.IDRepartidor}}</td>                
                                    </tr>
                                {% endfor %}
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn default" data-dismiss="modal">Cerrar</button>
            </div>                
        </div>
    </div>
</div>  
