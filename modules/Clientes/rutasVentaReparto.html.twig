{# Clientes/rutasVentas.html.twig #}

<script language='JavaScript' type='text/javascript'>
    $(function() {
	$( "#dialogRutasVentaReparto" ).dialog({
            autoOpen: false,
            width: 900,
            height: 300,
            position: ['center','center'],
            closeOnEscape: true,
            });
    });
</script>

<div id="dialogRutasVentaReparto" title="Rutas de venta y reparto para {{cliente.RazonSocial}}">
    
<div class="Listado" style="margin: 5px; float:left; width: 45%;">
    <p style="text-align: center; padding: 5px; font-weight: bold;">Visitas Comerciales</p>
    <table width="100%">

        <tr class="Titulos">
            <td class="Item">Dia</td>
            <td class="Item">Comercial</td>
        </tr>

        <tbody class='Cuerpo'>
            {% for ruta in cliente.getRutasVentas %}
            <tr>
                <td style="text-align: left;">{{ruta.Dia}}</td>
                <td style="text-align: left;">{{ruta.IDComercial}}</td>
            </tr>
            {% endfor %}
        </tbody>

    </table>
</div>
    
<div class="Listado" style="margin: 5px; float:left; width: 50%;">
    <p style="text-align: center; padding: 5px; font-weight: bold;">Repartos</p>
    <table width="100%">

        <tr class="Titulos">
            <td class="Item">Dia</td>
            <td class="Item">Ruta</td>
            <td class="Item">Direcci√≥n</td>
            <td class="Item">Repartidor</td>            
        </tr>

        <tbody class='Cuerpo'>
            {% for ruta in cliente.getRutasReparto %}
            <tr>
                <td style="text-align: left;">{{ruta.Dia}}</td>
                <td style="text-align: left;">{{ruta.IDRuta.Descripcion}}</td>
                <td style="text-align: left;">{{ruta.IDDirec}}</td>
                <td style="text-align: left;">{{ruta.IDRepartidor}}</td>                
            </tr>
            {% endfor %}
        </tbody>

    </table>
</div>    
</div>