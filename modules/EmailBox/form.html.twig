{% set atributos = values.atributos %}

<div style="float:left; width: 49%;">
    {{ macro.etiqueta(atributos.Ok,'Etiqueta',datos.Ok) }}
    <div style="clear: both;"></div>     
    {{ macro.etiqueta(atributos.ModifiedAt,'Etiqueta',datos.ModifiedAt) }}
    {{ macro.etiqueta(atributos.ModifiedBy,'Etiqueta',datos.ModifiedBy) }}
    {{ macro.etiqueta(atributos.Ip,'Etiqueta',datos.Ip) }}
    {{ macro.etiqueta(atributos.De,'Etiqueta',datos.De) }}
    {{ macro.etiqueta(atributos.Para,'Etiqueta',datos.Para) }}
    <div style="clear: both;"></div>
    {{ macro.etiqueta(atributos.CC,'Etiqueta',datos.CC) }}
    <div style="clear: both;"></div>
    {{ macro.etiqueta(atributos.CCO,'Etiqueta',datos.CCO) }}
    {{ macro.etiqueta(atributos.Asunto,'Etiqueta',datos.Asunto) }}
    {{ macro.etiqueta(atributos.Mensaje,'Etiqueta',datos.Mensaje) }}

    <div style="clear: both;"></div>
    <p style="margin-top: 10px; margin-bottom: 10px;">Archivos adjuntos:</p>
    <ul>
    {% for adjunto in datos.Adjuntos%}
        <li><a href="{{app.path}}/{{adjunto}}" target="_blank">{{adjunto}}</a></li>
    {% endfor %}
    </ul>
</div>

<div style="float:left; width: 49%;">
    {% if datos.Observations %}
        {% autoescape false%}
        {{ macro.etiqueta(atributos.Observations,'Etiqueta',datos.Observations) }}
        {% endautoescape %}
    {% endif %}
</div>


