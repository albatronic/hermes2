{% extends 'Fabricantes/index.html.twig' %}

{% block navegador %}{% endblock %}

{% block mantenimiento %}
<div class="FormManto">
    <form name="manto_{{values.controller}}" id="manto_{{values.controller}}" action="" method="POST" enctype="multipart/form-data">
        <input name="controller" value="Fabricantes" type="hidden" />
        <input name="action" id="action_{{values.controller}}" value="new" type="hidden" />
        <input name="Fabricantes[IDFabricante]" value="{{ values.datos.IDFabricante }}" type="hidden" />
        {% include '_global/comandosCreate.html.twig' %}

        <div class="Cuerpo">
	{% include '_global/FormErrores.html.twig' with {'errores': values.errores} %}
