{% extends values.controller ~ '/index.html.twig' %}

{% block mantenimiento %}
<div class="FormManto">
    <form name="manto_{{values.controller}}" id="manto_{{values.controller}}" action="" method="POST" enctype="multipart/form-data">
        <input name="controller" value="Familias" type="hidden" />
        <input name="action" id="action_{{values.controller}}" value="edit" type="hidden" />
        <input name="{{values.controller}}[{{values.datos.PrimaryKeyName}}]" id="{{values.controller}}_{{values.datos.PrimaryKeyName}}"value="{{ values.datos.PrimaryKeyValue }}" type="hidden" />
        {% include "_global/comandosSaveDelete.html.twig" %}

        <div class='Cuerpo'>
            {% include "_global/alertas.html.twig" with {'alertas': values.alertas,'errores': values.errores} %}
            {% include values.controller ~ "/form.html.twig" with {'datos': values.datos} %}
        </div>
    </form>
</div>
{% endblock %}