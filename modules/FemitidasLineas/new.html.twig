{% extends 'FemitidasLineas/index.html.twig' %}

{% block navegador %}{% endblock %}

{% block mantenimiento %}
<div class="FormManto">
	<form name="manto_{{values.controller}}" id="manto_{{values.controller}}" action="" method="POST" enctype="multipart/form-data">
		<div class='Comandos'>
			{% if values.permisos['I'] %}
			<input type="submit" name="accion" value="Crear" class="Comando"/>
			<hr>
                    {% endif %}
		</div>

		<div class="Cuerpo">
			<input name="controller" value="FemitidasLineas" type="hidden" />
			<input name="action" value="new" type="hidden" />
			<input name="FemitidasLineas[IDLinea]" value="{{ values.datos.IDLinea }}" type="hidden" />
			{% include '_global/FormErrores.html.twig' with {'errores': values.errores} %}
			{% include "FemitidasLineas/form.html.twig" with {'datos': values.datos} %}
		</div>
	</form>
</div>
{% endblock %}