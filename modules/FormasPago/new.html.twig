{% extends 'FormasPago/index.html.twig' %}

{% block navegador %}{% endblock %}

{% block mantenimiento %}
<div class="FormManto">
    <form name="manto_{{values.controller}}" id="manto_{{values.controller}}" action="" method="POST" enctype="multipart/form-data">
        <input name="controller" value="FormasPago" type="hidden" />
        <input name="action" value="new" type="hidden" />
        <input name="FormasPago[IDFP]" value="{{ values.datos.IDFP }}" type="hidden" />
        {% include '_global/comandosCreate.html.twig' %}

        <div class="Cuerpo">
        {% include "_global/alertas.html.twig" with {'alertas': values.alertas,'errores': values.errores} %}
	{% include "FormasPago/form.html.twig" with {'datos': values.datos, 'digitosCta': values.digitosCta} %}
        </div>
    </form>
</div>
{% endblock %}