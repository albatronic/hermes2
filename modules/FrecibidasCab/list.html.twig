{# Template list.html.twig for FrecibidasCab #}
{# -------------------------------------------------------#}
{% extends 'FrecibidasCab/index.html.twig' %}

{% block listado %}
    <div class='Listado'>

        {% include '_global/paginacion.html.twig' with {'filter':values.listado.filter,'controller':'FrecibidasCab','position':'izq'}%}

        <table class="table table-striped">
            <thead>
                <tr class='Titulos'>
                    <th></th>
                    <th>NÃºmero</th>
                    <th>Su Factura</th>
                    <th>Sucursal</th>
                    <th>Fecha</th>
                    <th>Proveedor</th>
                    <th>Base Imp.</th>
                    <th>Cuota Iva</th>
                    <th>Cuota Rec.</th>
                    <th>Total</th>
                    <th>Cta. Compras</th>
                    <th>Asto.</th>
                </tr>
            </thead>

            <tbody class="Cuerpo">
                {% for key,objeto in values.listado.data %}
                    {% if (key is even) %}
                        {% set classFila = 'Impar' %}
                    {% else %}
                        {% set classFila = 'Par' %}
                    {% endif %}
                    <tr onclick="location.href = '{{app.patd}}/{{values.controller}}/edit/{{objeto.PrimaryKeyMD5}}'" class='{{classFila}}' style="cursor: pointer;">
                        <td>
                            <a href='{{app.path}}/FrecibidasCab/Edit/{{objeto.PrimaryKeyMD5}}' title='Editar ...'>
                                <img src="{{app.path}}/images/botoneditar.png" widtd="16px" height="16px" />
                            </a>
                        </td>
                        <td>{{objeto.NumeroFactura}}</td>
                        <td>{{objeto.SuFactura|slice(0,15)}}</td>
                        <td>{{objeto.IDSucursal.Nombre|slice(0,10)}}</td>
                        <td>{{objeto.Fecha}}</td>
                        <td>{{objeto.IDProveedor.RazonSocial|slice(0,30)}}</td>
                        <td align="text-right">{{macro.moneda(objeto.TotalBases)}}</td>
                        <td align="text-right">{{macro.moneda(objeto.TotalIva)}}</td>
                        <td align="text-right">{{macro.moneda(objeto.TotalRecargo)}}</td>
                        <td align="text-right">{{macro.moneda(objeto.Total)}}</td>
                        <td align="text-left">{{objeto.CuentaCompras}}</td>
                        <td align="text-right">{{objeto.Asiento}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}