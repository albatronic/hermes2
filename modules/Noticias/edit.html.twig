{% extends 'Noticias/index.html.twig' %}

{% block mantenimiento %}
<div class="FormManto">
	<form name="manto_{{values.controller}}" id="manto_{{values.controller}}" action="" method="POST" enctype="multipart/form-data">
		<div class='Comandos'>
						{% if values.permisos['A'] %}
                            <input type="submit" name="accion" value="Guardar" class="Comando"/>
                        {% endif %}
			{% if values.permisos['B'] %}
			<input type="submit" name="accion" value="Borrar" class="Comando" onclick="return confirm('Â¿Desea borrar el registro?');"/>
                        {% endif %}
                        <hr>
		</div>

		<div class='Cuerpo'>
			<input name="controller" value="Noticias" type="hidden" />
			<input name="action" value="edit" type="hidden" />
			<input name="Noticias[IDNoticia]" value="{{ values.datos.IDNoticia }}" type="hidden" />
			{% include "_global/FormErrores.html.twig" with {'errores': values.errores} %}
			{% include "Noticias/form.html.twig" with {'datos': values.datos} %}
		</div>
	</form>
</div>
{% endblock %}