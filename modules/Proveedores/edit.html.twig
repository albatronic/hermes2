{% extends 'Proveedores/index.html.twig' %}

{% block mantenimiento %}
<div class="FormManto">
    <form name="manto_{{values.controller}}" id="manto_{{values.controller}}" action="" enctype="multipart/form-data" method="POST">
        <input name="controller" value="Proveedores" type="hidden" />
        <input name="action" id="action_{{values.controller}}" value="edit" type="hidden" />
        <input name="Proveedores[IDProveedor]" value="{{ values.datos.IDProveedor }}" type="hidden" />
        <input name="accion" id="accion_{{values.controller}}" value="" type="hidden" />
    <div class='Comandos'>

        <div class="Titulo">

        <div style="float: left;">
            {% include "_global/comandosSave.html.twig" %}
            {% include "_global/comandosDelete.html.twig" %}
            {% if values.permisos.permisosModulo['CO'] %}
            <a href="javascript:;" onClick="window.open('{{app.path}}/_Emergente/HistoricoCompras/0/{{values.datos.IDProveedor}}','HistoricoCompras','width=850,height=500,resizable=yes,scrollbars=yes');">
                <img src="{{app.path}}/images/historico.png" width="24px" height="24px" alt="Historico" title="Historico de Compras...">
            </a>
            {% endif %}
        </div>

        {% include '_global/comandosAuditoria.html.twig' with {'controller': values.controller} %}

        <div style="clear: both;"></div>

        </div>
    </div>

        <div class='Cuerpo'>
        {% include "_global/alertas.html.twig" with {'alertas': values.alertas,'errores': values.errores} %}
	{% include "Proveedores/form.html.twig" with {'datos': values.datos} %}
        </div>
    </form>
</div>
{% endblock %}