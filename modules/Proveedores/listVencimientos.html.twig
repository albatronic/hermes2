{# Proveedores/listVencimientos.html.twig #}

{% extends popup %}

{% block content %}
<table id="table-listado" class="table table-striped">
    <thead>
        <tr>
            <th width='16px'>&nbsp;</th>            
            <th>Factura</th>
            <th>Fecha</th>
            <th>Vencimiento</th>
            <th>Importe</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody class="Cuerpo">
        {% for key,recibo in values.recibos %}
            {% if (key is even) %}
                {% set classFila = 'Impar' %}
            {% else %}
                {% set classFila = 'Par' %}
            {% endif %}
            <tr class="{{classFila}}">
                <td>
                    <a href='{{app.path}}/RecibosProveedores/Edit/{{recibo.PrimaryKeyMD5}}' target="_blank" title='Editar Recibo ...'>
                        <img src="{{app.path}}/images/botoneditar.png" width="16px" height="16px" />
                    <a>
                </td>                    
                <td align="left">
                    <a href="{{app.path}}/FrecibidasCab/Edit/{{recibo.IDFactura.PrimaryKeyMD5}}" target="_blank">{{recibo.IDFactura}}</a>
                </td>
                <td align="center">{{recibo.Fecha}}</td>
                <td align="center">{{recibo.Vencimiento}}</td>
                <td align="right">{{recibo.Importe}}</td>
                <td>{{recibo.IDEstado}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}