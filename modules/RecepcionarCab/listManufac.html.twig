{# Template listManufac.html.twig for RecepcionarCab  #}
{# ---------------------------------------------------#}
{% extends 'RecepcionarCab/index.html.twig' %}

{% block listado %}
<div class='Listado'>
	<div class='Titulo'>Elaboraciones pendientes de Recepcionar</div>

        <table width='100%'>
            <tr class='Titulos'>
                <td class='Item'>N.Elaboración</td>
                <td class='Item'>Fecha Orden</td>
                <td class='Item'>Fecha Envío</td>
                <td class='Item'>Sala de Elaboración</td>
                <td class='Item'>Descripción</td>
            </tr>

            <tbody class="Cuerpo">
            {% for key,objeto in values.listado.data %}
            <tr class="ItemListado">
                <td>
                    {{ macro.linkThickBox(app.path,objeto.IDManufac,'RecepcionarLineas/index/ManufacCab/'~objeto.IDManufac,'Recepcionar Elaboración '~objeto.IDManufac~' '~objeto.IDElaborador.RazonSocial,350,950) }}
                </td>
                <td align="center">{{objeto.FechaOrden}}</td>
                <td align="center">{{objeto.FechaEnvio}}</td>
                <td>{{objeto.IDElaborador.RazonSocial}}</td>
                <td>{{objeto.Descripcion|slice(0,40)}}</td>
            </tr>
            {% else %}
            <tr><td colspan="5" class="Titulo">No hay elaboraciones pendientes de recepcionar para el almacén</td></tr>
            {% endfor %}
            </tbody>
        </table>

</div>
{% endblock %}