{# TEMPLATE RecibosClientes/form.html.twig #}
{# Muestra los campos editables de la entidad        #}

{% set digitosCta = emp.DigitosCuentaContable %}
{% set atributos = values.atributos %}

<div class="Izquierda" style="width:51%;">
{{ macro.select(atributos.IDEstado,'Etiqueta','RecibosClientes[IDEstado]','RecibosClientes_IDEstado',none,datos.IDEstado.IDTipo,datos.IDEstado.fetchAll,'Select') }}
{{ macro.input(atributos.Recibo,'Etiqueta','text','RecibosClientes[Recibo]','RecibosClientes_Recibo',datos.Recibo,'4','CampoUnidades') }}
{{ macro.etiqueta(atributos.IDSucursal,'Etiqueta',datos.IDSucursal.Nombre) }}
{{ macro.etiqueta(atributos.IDFactura,'Etiqueta',datos.IDFactura.NumeroFactura) }}
{{ macro.etiqueta(atributos.IDCliente,'Etiqueta',datos.IDCliente.RazonSocial) }}
{{ macro.etiqueta(atributos.IDComercial,'Etiqueta',datos.IDComercial.Nombre) }}
{{ macro.etiqueta(atributos.Fecha,'Etiqueta',datos.Fecha) }}
{{ macro.fecha(atributos.Vencimiento,'Etiqueta','RecibosClientes[Vencimiento]','RecibosClientes_Vencimiento',datos.Vencimiento,'10','CampoFecha') }}
{{ macro.input(atributos.Importe,'Etiqueta','text','RecibosClientes[Importe]','RecibosClientes_Importe',datos.Importe,'10','CampoImporte') }}
{{ macro.input(atributos.Iban,'Etiqueta','text','RecibosClientes[Iban]','RecibosClientes_Iban',datos.Iban,'34','CampoTextoMedio') }}
{{ macro.input(atributos.Bic,'Etiqueta','text','RecibosClientes[Bic]','RecibosClientes_Bic',datos.Bic,'11','CampoTextoMedio') }}
{{ macro.input(atributos.Mandato,'Etiqueta','text','RecibosClientes[Mandato]','RecibosClientes_Mandato',datos.Mandato,'35','CampoTextoMedio') }}
{{ macro.fecha(atributos.FechaMandato,'Etiqueta','RecibosClientes[FechaMandato]','RecibosClientes_FechaMandato',datos.FechaMandato,'10','CampoFecha') }}
{{ macro.input(atributos.Concepto,'Etiqueta','text','RecibosClientes[Concepto]','RecibosClientes_Concepto',datos.Concepto,'255','CampoTextoLargo') }}
{{ macro.input(atributos.IDRemesa,'Etiqueta','text','RecibosClientes[IDRemesa]','RecibosClientes_IDRemesa',datos.IDRemesa,'14','CampoTextoCorto') }}
{{ macro.input(atributos.Remesar,'Etiqueta','checkbox','RecibosClientes[Remesar]','RecibosClientes_Remesar',datos.Remesar.IDTipo,'255','CampoTextoLargo','20')}} 
{{ macro.input(atributos.CContable,'Etiqueta','text','RecibosClientes[CContable]','RecibosClientes_CContable',datos.CContable,digitosCta,'CampoTextoCorto') }}
{{ macro.input(atributos.Asiento,'Etiqueta','text','RecibosClientes[Asiento]','RecibosClientes_Asiento',datos.Asiento,'6','CampoUnidades') }}
{{ macro.foco('RecibosClientes_IDEstado') }}
</div>

{% if datos.IDRecibo %}
<div class="Derecha" style="width:49%;">
    <div id="tabs">
        <ul>
            <li><a href="#tabs-1">Documentos</a></li>
        </ul>
        <div id="tabs-1">
            {{ macro.documentos(values.controller,datos.getPrimaryKeyValue)}}
        </div>
    </div>
</div>
{% endif %}