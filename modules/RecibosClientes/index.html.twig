{# Template index.html.twig for RecibosClientes #}
{# -------------------------------------------------------#}
{% extends layout %}

{% block title parent() ~ " - " ~ values.titulo %}

{% block content %}
	<div class='Titulo'>{{ values.titulo }}
        {% include '_global/comandosHelp.html.twig' with {'controller': values.controller} %}
        </div>

	{% block filtro %}
        {% if values.permisos.permisosModulo['CO'] %}
            {% include 'RecibosClientes/filtro.html.twig' with {'filter': values.listado.filter} %}
        {%endif%}
	{% endblock %}

	{% include "_global/FormErrores.html.twig" with {'errores': values.errores} %}
        {% include "_global/alertas.html.twig" with {'alertas': values.alertas} %}

        <div id="div_listado">
        {% block listado %}
	{% endblock %}
        </div>

	{% block mantenimiento %}
	{% endblock %}
{% endblock %}