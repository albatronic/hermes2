{# Template list.html.twig for RemesasGenerar             #}
{# -------------------------------------------------------#}
{% extends values.controller ~ '/index.html.twig' %}

{% block listado %}
<div class='Listado'>

    <div id="Listado">
        <table width='100%'>
            <tr class='Titulos'>
                <td width='16px'>&nbsp;</td>
                <td class='Item'>Factura</td>
                <td class='Item'>Fecha</td>
                <td class='Item'>Vencimiento</td>
                <td class='Item'>Cliente</td>
                <td class='Item'>C/C Banco</td>
                <td class='Item'>Importe</td>
                <td class='Item'>Estado</td>
            </tr>

            <tbody class="Cuerpo">
            {% for key,objeto in values.datos %}
                {% if (key is even) %}
                    {% set classFila = 'Impar' %}
                {% else %}
                    {% set classFila = 'Par' %}
                {% endif %}
            <tr onclick="location.href='{{app.path}}/{{values.controller}}/edit/{{objeto.PrimaryKeyMD5}}'" class='{{classFila}}'>
                <td>
                    <a href='{{app.path}}/AlbaranesCab/Edit/{{objeto.PrimaryKeyMD5}}' title='Editar ...'>
                        <img src="{{app.path}}/images/botoneditar.png" width="16px" height="16px"/>
                    </a>
                </td>
                <td>{{objeto.NumeroFactura}}</td>
                <td>{{objeto.Fecha}}</td>
                <td>{{objeto.Vencimiento}}</td>
                <td>{{objeto.RazonSocial|slice(0,40)}}</td>
                <td>{{objeto.CBanco|slice(0,20)}}</td>
                <td align="right">{{objeto.Importe}}</td>                
                <td>{{objeto.Estado}}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}