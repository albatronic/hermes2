{% extends 'Submenu/index.html.twig' %}

{% block navegador %}
{% include "_global/comandosList.html.twig" with {'controller': values.controller, 'linkValue': values.linkBy.value} %}
{% include "_global/comandosNew.html.twig" with {'controller': values.controller, 'linkValue': values.linkBy.value} %}
{% endblock %}

{% block mantenimiento %}
<div class="FormManto">
    <form name="manto_{{values.controller}}" id="manto_{{values.controller}}" action="" method="POST" enctype="multipart/form-data">
        <input name="controller" value="Submenu" type="hidden" />
        <input name="action" value="edit" type="hidden" />
        <input name="Submenu[IDOpcion]" value="{{values.linkBy.value}}" type="hidden" />
        <input name="Submenu[Id]" value="{{ values.datos.Id }}" type="hidden" />
        {% include "_global/comandosSaveDelete.html.twig" %}

        <div class='Cuerpo'>
	{% include "_global/FormErrores.html.twig" with {'errores': values.errores} %}
	{% include "Submenu/form.html.twig" with {'datos': values.datos} %}
        </div>
    </form>
</div>
{% endblock %}