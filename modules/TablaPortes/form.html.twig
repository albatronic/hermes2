{% extends 'TablaPortes/index.html.twig' %}

{% block listado %}
<div class='Listado'>

    <table class="table">
        <thead>
            <tr>
                <th class="text-center">Zona / Kilos</th>
                {% for kilos in values.tramosKilos %}
                <th class='text-center'>{{kilos.Value}}</th>
                {% endfor %}
            </tr>
        </thead>

        <tbody class="Cuerpo">
            {% for zona in values.zonasTransporte %}
                <tr>
                    <td>{{zona.Value}}</td>
                    {% for kilos in values.tramosKilos %}
                    <td align="right">
                        <input 
                            name="{{zona.Id}}_{{kilos.Id}}" 
                            value="{{values.tablaPortes[zona.Id]['Tarifa'][kilos.Value]}}" 
                            type="text" 
                            style="text-align: right;width: 33px;"
                            onchange="actualizaTablaPortes('{{values.idAgencia}}','{{zona.Id}}','{{kilos.Value}}',this.value);"
                        />
                    </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<div id="resultado"></div>
{% endblock %}
