{# LISTADO GENERICO listGenerico.html.twig                #}
{# ES INCLUIDO POR LOS list.html.twig DE CADA CONTROLADOR #}

<div id="Listado">
<table width='100%'>
    <tr class='Titulos'>
        <td width='16px'>&nbsp;</td>
        {% for title in listado.titles %}
            <td class='Item'>{{ title.title }}</td>
	{% endfor%}
        {% if mostrarPublicar == '1' %}
            <td class='Item'>Publicar</td>
        {% endif %}
    </tr>

    <tbody class='Cuerpo'>
    {% for key,objeto in listado.data %}
        {% if (key is even) %}
            {% set classFila = 'Impar' %}
        {% else %}
            {% set classFila = 'Par' %}
        {% endif %}
        <tr {#onclick="location.href='{{app.path}}/{{controller}}/edit/{{objeto.getPrimaryKeyMD5()}}'"#} class='{{classFila}}'>
            <td>
                <a href='{{app.path}}/{{controller}}/Edit/{{objeto.getPrimaryKeyMD5()}}' title='Editar ...'>
                    <img src="{{app.path}}/images/botoneditar.png" width="16px" height="16px" />
                <a>
            </td>
            {% for field,value in listado.titles %}
            {% if (value.type == 'decimal') %}
                {% set align = 'right' %}
            {% else %}
                {% set aling = 'left' %}
            {% endif %}
            <td class='Item' align='{{align}}'>
            {% if value.link.route %}
                <a class="thickbox" title="{{value.link.title}}" href="{{app.path}}/{{value.link.route}}/{{objeto.getPrimaryKeyValue()}}/?TB_iframe=true&height=430&width=1000">
                    {{objeto.getColumnValue(field,value.length)}}
                </a>
            {% else %}
                {{objeto.getColumnValue(field,value.length)}}
            {% endif%}
            </td>
            {% endfor %}
            
            {% if mostrarPublicar == '1' %}
                <td class='Item' align="center">
                    {{ macro.actualizaColumna(controller,objeto.getPrimaryKeyValue,'Publish',objeto.Publish.IDTipo,'Publicar/Despublicar')}}  
                </td>
            {% endif %}            
	</tr>
	{% else %}
	<tr><td colspan='8'>No hay informaci√≥n que cumpla esos criterios</td></tr>
    {% endfor %}
    </tbody>
</table>
</div>