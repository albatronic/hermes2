{# CONCATENA TODOS LOS ELEMENTOS DEL ARRAY alertas Y SE LOS #}
{# PASA A LA FUNCION JS SEPARADOS POR EL CARACTER '#'       #}
{% if values.alertas or values.errores %}
<div class="note note-danger">
<h4 class="block">Algo no fue bien, revise los siguientes avisos</h4>
    {% for alerta in alertas %}<p>{{alerta}}</p>{% endfor %}
    {% for error in errores %}<p>{{error}}</p>{% endfor %}
</div>
{% endif%}
